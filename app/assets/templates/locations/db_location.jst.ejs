<% console.log(location); %>

<ul>
	<li><%= location.get("name") %></li>
	<li><button class="set-map-center">Center Map</button></li>
	<li class="location-detail-link">
		<a
			href="#/user-locations/location-details/<%= location.get("id") %>"
			class="location-detail-link">
			Location Detail View
		</a>
	</li>
	<li><button class="add-comment">Add a Comment</button></li>
	<li><%= location.get("address") %></li>
	<li class="categories">Categories:
		<dl class="group">
			<% _(location.get("categories_as_array")).each(function (category) { %>
				<dt><%= _(category).humanize() %></dt>
			<% }) %>
		</dl>
	</li>

	<li class="collection-display">
		<% if (location.get("collections").length) { %>
			Collections Included In:
		<% } else { %>
			Not Included In Any Collections Yet
		<% } %>
		<dl class="group">
			<% (location.get("collection_locations")).each(function (collection_location) { %>
				<dt class="single-collection">
					<span><%= _.humanize(collection_location.get("collection").get("name")) %></span>
					
					<%= '<button data-id="' + collection_location.get("collection_id") + '" class="delete-collection">X</button>' %>
					
				</dt>
			<% }) %>
		</dl>
	</li>
	<li><button class="add-collection">Add a Collection</button></li>
</ul>