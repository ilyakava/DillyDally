<li><h3>About: <%= location.get("name") %></h3></li>

<li>First added by: <%= location.get("creator").get("email") %></li>

<li><%= location.get("address") %></li>

<li class="toggle-user-visit"></li>

<li class="tag-display">Tags:
	<dl class="group">
		<% (location.get("location_tags")).each(function (location_tag) { %>
			<dt class="single-tag">
				<span><%= location_tag.get("tag").get("name") %></span>
				<% if (location_tag.get("user_id") == current_user.id) { %>
					<%= '<button data-id="' + location_tag.get("id") + '" class="delete-tag">X</button>' %>
				<% } %>
			</dt>
		<% }) %>
	</dl>
</li>
<li><button class="add-tag">Add More Tags</button></li>

<li class="categories">Categories:
	<dl class="group">
		<% _(location.get("categories")).each(function (category) { %>
			<dt><%= _(category).humanize() %></dt>
		<% }) %>
	</dl>
</li>
<li><h3>Comments:</h3></li>
<li>
	<ul class="comment-display">
		<% (location.get("comments")).each(function (comment) { %>
			<li><%= comment.get("body") %></li>
			<li>
				By: <%= comment.get("author").get("email") %> at 
				<%= comment.get("updated_at") %>
			</li>
		<% }) %>
	</ul>
</li>
<li><button class="add-comment">Add a Comment</button></li>
<% window.detail = location %>
