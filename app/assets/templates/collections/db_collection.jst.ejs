<% console.log(collection); %>

<ul>
	<li><%= collection.get("name") %></li>
	<li><button class="set-map-center">Center Map</button></li>
	<li><a href="#/detail-view/<%= collection.get("id") %>">(Collection Detail View)</a></li>
	
	<% var allCategories = []; %>
	<% collection.get("locations").each(function (location) { %>
		<% allCategories.concat(location.get("categories_as_array")) %>
	<% }); %>

	<li class="categories">Included Categories:
		<dl class="group">
			<% _(_.uniq(allCategories)).each(function (category) { %>
				<dt><%= _(category).humanize() %></dt>
			<% }) %>
		</dl>
	</li>
	<li><button class="add-comment">Add a Comment</button></li>
</ul>